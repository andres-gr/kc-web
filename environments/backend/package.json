{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon -e ts,js -x babel-node --inspect src/index.ts --extensions .ts,.js",
    "build": "cross-env NODE_ENV=production rimraf build && mkdir build && tsc --noEmit && babel src -d build -s --extensions .js,.ts",
    "serve": "cross-env NODE_ENV=production node build/index.js"
  },
  "dependencies": {
    "@babel/core": "^7.8.0",
    "@babel/node": "^7.8.0",
    "axios": "^0.19.1",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/plugin-proposal-optional-chaining": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-typescript": "^7.8.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/node": "^13.1.6",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-module-resolver": "^0.16.0",
    "eslint-plugin-putout": "^3.2.1",
    "eslint-plugin-sort-destructure-keys": "^1.3.3",
    "eslint-plugin-sort-exports": "^0.2.0",
    "nodemon": "^2.0.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.4"
  }
}
